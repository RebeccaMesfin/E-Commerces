<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userprofilecompany">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/blue_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_image_white_company_24" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ic_baseline_photo_camera_company_24" />

                </FrameLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="80dp"
                    android:scaleType="fitXY"
                    android:id="@+id/btnCompanyEdit"
                    android:src="@drawable/ic_baseline_edit_company_24"
                    tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="170dp"
                android:text="Becky"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>

                <TextView
                    android:id="@+id/generalInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Information"
                    android:textColor="@color/blue"
                    android:textSize="30sp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_person_24"/>

                    <TextView
                        android:id="@+id/CompProfileFullName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Full Name"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Name"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:textSize="16dp"
                    android:background="@drawable/blue_fill__rounded_color"
                    android:backgroundTint="@android:color/transparent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_lock_24"/>

                    <TextView
                        android:id="@+id/CompProfilePassword"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Password"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:textSize="16dp"
                    android:background="@drawable/blue_fill__rounded_color"
                    android:backgroundTint="@android:color/transparent"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_phone_iphone_24"/>

                    <TextView
                        android:id="@+id/CompProfilePhone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Phone Number"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:textSize="16dp"
                    android:background="@drawable/blue_fill__rounded_color"
                    android:backgroundTint="@android:color/transparent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_email_24"/>

                    <TextView
                        android:id="@+id/CompProfileEmail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Email"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:textSize="16dp"
                    android:background="@drawable/blue_fill__rounded_color"
                    android:backgroundTint="@android:color/transparent"/>


              <Button
                  android:id="@+id/btnCompanyUpdate"
                  android:layout_width="300dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="50dp"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/blue_fill__rounded_color"
                  android:text="Update" />

          </LinearLayout>

</RelativeLayout>
</ScrollView>
